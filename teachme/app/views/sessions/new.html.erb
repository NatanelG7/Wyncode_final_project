<h1>Teach me App</h1>
<div id="hero-holder" class="container-fluid ">
  <h2>Sign in</h2>
  <div class="row" >
    <div class="col-10 offset-1 row">
        <%= form_tag sessions_path do %>
        <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email%>
        </div>
        <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password%>
        </div>
        <div class="form-group ">
        <button type="submit" class="btn btn-light">Sign in</button>
        <button type="button" class="btn btn-light"><%= link_to 'Sign-up', new_user_path(@user) %></button>
        </div>
        <% end %>
    </div>
  </div>
</div>
