<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div style="height: 600px; background-color: lightblue" class="form-div row justify-content-md-center">

  <div class="img">
    <%= image_tag("/assets/users_placeholder.jpg", :alt => "rss feed") %>
  </div>

  <div style="height: 600px" class="user">
    <div class="">
      <%= form.label :first_name %>
      <%= form.text_field :first_name %>
    </div>

    <div class="">
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>
    </div>

    <div class="">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="">
      <%= form.label :phone %>
      <%= form.text_field :phone %>
    </div>

    <div class="">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="">
      <%= form.label :address %>
      <%= form.text_field :address %>
    </div>

    <div class="">
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>

    <div class="">
      <%= form.label :state %>
      <%= form.text_field :state %>
    </div>

    <div class="">
      <%= form.label :zip_code %>
      <%= form.text_field :zip_code %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>

</div>
<% end %>
